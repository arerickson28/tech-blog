{{#each posts}}

       
        <div value="{{this.id}}"class="post">
            <div class="postTitle">
                <h4>{{this.title}}</h4>
            </div>
            <div class="postContent">
                <h5>{{this.content}}</h5>
                <h6>   --- {{this.user.userName}}</h6>
                <h6>Posted On: <br> {{format_date this.date_created}}</h6>
            </div>
            {{#if ../logged_in}}
                <button class="commentBtn">Add a comment</button>
            {{else}}
                <h2>NO BUTTON</h2>
            {{/if}}
        </div>

{{/each}}

<script src="/js/script.js"></script>