{{#each posts as |post|}}
    {{!-- {{#unless post.comment_id}} --}}
        <div value="{{post.id}}"class="post">
            <div class="postTitle">
                <h4>{{post.title}}</h4>
            </div>
            <div class="postContent">
                <h5>{{post.content}}</h5>
                <h6>   --- {{post.user.userName}}</h6>
                <h6>Posted On: <br> {{format_date post.date_created}}</h6>
            </div>
            {{#if ../logged_in}}
                <button class="commentBtn">Add a comment</button>
            {{/if}}
        </div>

        {{!-- <div>
            <p>{{post.id.comment.content}}</p>
        </div> --}}
          {{#each comments as |comment|}}
            {{!-- {{#if has_comment ../post.id comment.comment_id}} --}}

              <div value="{{comment.id}}"class="post">
                <div class="postContent">
                    <h5>{{comment.content}}</h5>
                    <h6>   --- {{comment.user.userName}}</h6>
                    <h6>Posted On: <br> {{format_date comment.date_created}}</h6>
                </div>
            </div>

            {{!-- {{/if}} --}}
          
        {{/each}}
      



    {{!-- {{/unless}} --}}
{{/each}}



<script src="/js/script.js"></script>