{{#each posts as |post| }}

    {{#if post.comment_id}}
    {{else}}
        <div class="post">
            <div class="postTitle">
                <h4>{{post.title}}</h4>
            </div>
            <div class="postContent">
                <h5>{{post.content}}</h5>
                <h6>   --- {{post.user.userName}}</h6>
                <h6>{{post.date_created}}</h6>
            </div>
        </div>
    {{/if}}
{{/each}}